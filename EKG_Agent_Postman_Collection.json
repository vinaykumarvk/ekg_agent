{
	"info": {
		"_postman_id": "ekg-agent-test-suite",
		"name": "EKG Agent API Test Suite",
		"description": "Test suite for EKG Agent API with refactored code and concise/balanced/deep modes",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Health Check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has status field\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('status');",
							"    pm.expect(jsonData.status).to.eql('healthy');",
							"});",
							"",
							"pm.test(\"OpenAI is connected\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.openai_status).to.eql('connected');",
							"});",
							"",
							"pm.test(\"Domains are loaded\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.domains).to.be.an('object');",
							"    pm.expect(Object.keys(jsonData.domains).length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Concise mode is available\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.available_modes).to.include('concise');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/health",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"health"
					]
				},
				"description": "Check if the API server is healthy and all services are running"
			},
			"response": []
		},
		{
			"name": "2. List Available Domains",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has domains array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('domains');",
							"    pm.expect(jsonData.domains).to.be.an('array');",
							"});",
							"",
							"pm.test(\"At least one domain exists\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.domains.length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"Domain has required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.domains.length > 0) {",
							"        var domain = jsonData.domains[0];",
							"        pm.expect(domain).to.have.property('domain_id');",
							"        pm.expect(domain).to.have.property('name');",
							"        pm.expect(domain).to.have.property('default_vectorstore_id');",
							"        pm.expect(domain).to.have.property('kg_vectorstore_id');",
							"    }",
							"});",
							"",
							"// Store first domain ID for use in other requests",
							"if (pm.response.json().domains.length > 0) {",
							"    pm.environment.set('test_domain_id', pm.response.json().domains[0].domain_id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/domains",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"domains"
					]
				},
				"description": "Get list of all available domains with their configurations"
			},
			"response": []
		},
		{
			"name": "3. Answer Question - Concise Mode",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response has required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('response_id');",
							"    pm.expect(jsonData).to.have.property('markdown');",
							"    pm.expect(jsonData).to.have.property('meta');",
							"});",
							"",
							"pm.test(\"Mode is concise\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.meta.mode).to.eql('concise');",
							"});",
							"",
							"pm.test(\"Answer is not empty\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.markdown).to.be.a('string');",
							"    pm.expect(jsonData.markdown.length).to.be.above(100);",
							"});",
							"",
							"pm.test(\"Response time is acceptable\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(60000);",
							"});",
							"",
							"// Store response ID for conversational test",
							"pm.environment.set('last_response_id', pm.response.json().response_id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"question\": \"What is CRR and PRR logic for order placement?\",\n    \"domain\": \"wealth_management\",\n    \"params\": {\n        \"_mode\": \"concise\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/v1/answer",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"v1",
						"answer"
					]
				},
				"description": "Test answer generation with concise mode - should return a focused, brief answer"
			},
			"response": []
		},
		{
			"name": "4. Answer Question - Balanced Mode",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Mode is balanced\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.meta.mode).to.eql('balanced');",
							"});",
							"",
							"pm.test(\"Answer is comprehensive\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.markdown.length).to.be.above(500);",
							"});",
							"",
							"pm.test(\"Answer contains relevant content\", function () {",
							"    var jsonData = pm.response.json();",
							"    var answer = jsonData.markdown.toLowerCase();",
							"    pm.expect(answer).to.include('otp');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"question\": \"What is OTP verification and how does it work?\",\n    \"domain\": \"wealth_management\",\n    \"params\": {\n        \"_mode\": \"balanced\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/v1/answer",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"v1",
						"answer"
					]
				},
				"description": "Test answer generation with balanced mode - should return a well-structured, moderate-length answer"
			},
			"response": []
		},
		{
			"name": "5. Answer Question - Deep Mode",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Mode is deep\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.meta.mode).to.eql('deep');",
							"});",
							"",
							"pm.test(\"Answer is comprehensive and detailed\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.markdown.length).to.be.above(1000);",
							"});",
							"",
							"pm.test(\"Answer has structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    var answer = jsonData.markdown;",
							"    // Check for markdown structure (headers, lists, etc.)",
							"    pm.expect(answer).to.match(/##|###|\\*|\\-|\\d+\\./);",
							"});",
							"",
							"pm.test(\"Response includes metadata\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.meta).to.be.an('object');",
							"    pm.expect(jsonData.meta).to.have.property('domain');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"question\": \"Explain the complete order placement workflow including all validations, checks, and approval processes\",\n    \"domain\": \"wealth_management\",\n    \"params\": {\n        \"_mode\": \"deep\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/v1/answer",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"v1",
						"answer"
					]
				},
				"description": "Test answer generation with deep mode - should return a comprehensive, detailed answer with extensive information"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set base URL if not already set",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:8000');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Global test: Check response time",
					"pm.test('Response time is less than 60 seconds', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(60000);",
					"});"
				]
			}
		}
	],
	"variable": [
